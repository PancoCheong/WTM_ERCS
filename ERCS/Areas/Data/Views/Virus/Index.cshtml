@model ERCS.ViewModel.Data.VirusVMs.VirusListVM
@inject IStringLocalizer<WalkingTec.Mvvm.Core.Program> Localizer;

<wt:searchpanel vm="@Model" reset-btn="true">
<wt:row items-per-row="ItemsPerRowEnum.Three">
<wt:textbox field="Searcher.VirusName" />
<wt:combobox field="Searcher.VirusType" empty-text="@Localizer["All"]" />
<wt:combobox field="Searcher.SelectedPatientsIDs" items="Searcher.AllPatientss" empty-text="@Localizer["All"]" />
</wt:row>
</wt:searchpanel>
<wt:grid vm="@Model" url="/Data/Virus/Search"/>
